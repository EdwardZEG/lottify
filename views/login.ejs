        // Variable JS generada por EJS para saber si limpiar recordar sesi√≥n
        var clearRemember = "<%= clearRemember ? 'true' : 'false' %>";
    </script>
    <script>
        // Soporte para Enter en formularios - Estrategia simplificada
        document.addEventListener('DOMContentLoaded', function () {
            const loginForm = document.getElementById('loginForm');

            // Agregar listener al formulario
            loginForm.addEventListener('keypress', function (e) {
                if (e.key === 'Enter') {
                    e.preventDefault();
                    const submitButton = loginForm.querySelector('button[type="submit"]');
                    if (submitButton) {
                        setTimeout(() => submitButton.click(), 10);
                    }
                }
            });

            // Tambi√©n agregar a cada input individualmente
            const inputs = loginForm.querySelectorAll('input');
            inputs.forEach(input => {
                input.addEventListener('keypress', function (e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        const submitButton = loginForm.querySelector('button[type="submit"]');
                        if (submitButton) {
                            setTimeout(() => submitButton.click(), 10);
                        }
                    }
                });
            });
        });

        // Recordar sesi√≥n: autocompleta email y contrase√±a si el usuario lo desea
        const rememberCheckbox = document.getElementById('remember');
        window.addEventListener('DOMContentLoaded', function () {
            const savedEmail = localStorage.getItem('remember_email');
            const savedPassword = localStorage.getItem('remember_password');
            if (savedEmail && savedPassword) {
                emailInput.value = savedEmail;
                passwordInput.value = savedPassword;
                rememberCheckbox.checked = true;
                validateEmail();
                validatePassword();
            }
            // Si hay error de login, limpiar localStorage para evitar doble intento
            const alertDanger = document.querySelector('.alert-danger');
            if (alertDanger) {
                localStorage.removeItem('remember_email');
                localStorage.removeItem('remember_password');
                rememberCheckbox.checked = false;
                passwordInput.value = '';
            }
        });
        loginForm.addEventListener('submit', function () {
            if (rememberCheckbox.checked) {
                localStorage.setItem('remember_email', emailInput.value);
                localStorage.setItem('remember_password', passwordInput.value);
            } else {
                localStorage.removeItem('remember_email');
                localStorage.removeItem('remember_password');
            }
        });
        rememberCheckbox.addEventListener('change', function () {
            if (!this.checked) {
                localStorage.removeItem('remember_email');
                localStorage.removeItem('remember_password');
            }
        });
    </script>
