<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lottify - Panel Invitado Móvil</title>
    <link rel="icon" type="image/svg+xml" href="/img/logo_header.svg">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.3/dist/cdn.min.js"></script>
    <style>
        body {
            background: #fff;
            font-family: 'Poppins', Arial, sans-serif;
        }

        .mobile-header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 60px;
            background: #000;
            z-index: 3000;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0 1rem;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.18);
        }

        .mobile-header .d-flex {
            width: 100%;
            height: 100%;
            align-items: center !important;
            justify-content: space-between !important;
        }

        .mobile-header img {
            height: 38px;
            width: auto;
            display: block;
            max-width: 120px;
        }

        #mobile-hamburger {
            background: transparent;
            border: none;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            height: 100%;
        }

        #hamburger-icon {
            color: #fff;
            font-size: 2.2rem;
            display: flex;
            align-items: center;
            transition: all 0.3s ease;
        }

        .sidebar {
            background: #000 !important;
            color: #fff;
            position: fixed;
            top: 60px !important;
            left: -100vw;
            width: 100vw !important;
            min-width: 0 !important;
            max-width: 100vw !important;
            height: calc(100vh - 60px) !important;
            padding: 0 !important;
            box-shadow: 4px 0 24px rgba(0, 0, 0, 0.18);
            transition: left 0.3s, width 0.3s;
            display: flex !important;
            flex-direction: column !important;
            min-height: 320px;
            z-index: 3001;
        }

        .sidebar.expanded {
            left: 0 !important;
        }

        #sidebar-backdrop {
            display: none;
            opacity: 0;
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0, 0, 0, 0.32);
            z-index: 1999;
            transition: opacity 0.3s;
        }

        .content,
        .content.expanded {
            margin-top: 64px !important;
            background: #fff;
        }

        /* Sistema de secciones mejorado - contenido completo visible para móvil */
        .content-section {
            position: fixed !important;
            top: 60px !important;
            left: 0 !important;
            width: 100vw !important;
            height: calc(100vh - 60px) !important;
            background: linear-gradient(135deg, #f9fafb 0%, #eff6ff 100%) !important;
            overflow-y: auto !important;
            overflow-x: hidden !important;
            margin: 0 !important;
            padding: 20px !important;
            z-index: 1000 !important;
            display: none !important;
            visibility: hidden !important;
            opacity: 0 !important;
            transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1) !important;
        }

        .content-section.active {
            display: block !important;
            visibility: visible !important;
            opacity: 1 !important;
            z-index: 1000 !important;
        }

        /* Z-index específicos para evitar superposición */
        #unirse-section {
            z-index: 1000 !important;
        }

        #unirse-section.active {
            z-index: 1000 !important;
        }

        /* Eliminar padding/margin del content para evitar conflictos */
        .content {
            padding: 0 !important;
            transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1) !important;
        }

        @media (min-width: 601px) {
            .sidebar {
                left: 0 !important;
                width: 80px;
                height: 100vh !important;
                top: 0 !important;
                position: fixed;
            }

            .sidebar.expanded {
                width: 300px;
            }

            #sidebar-backdrop {
                display: none !important;
            }

            .content,
            .content.expanded {
                margin-top: 0 !important;
                margin-left: 80px;
            }

            /* Ajustes para escritorio */
            .content-section {
                top: 0 !important;
                left: 80px !important;
                width: calc(100vw - 80px) !important;
                height: 100vh !important;
            }

            .content.expanded .content-section {
                left: 300px !important;
                width: calc(100vw - 300px) !important;
            }
        }

        .sidebar-logo-container {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            min-height: 60px;
        }

        .sidebar-logo-container .logo {
            width: 180px !important;
            height: 60px !important;
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            display: block;
            margin: 0 auto;
        }

        .sidebar-menu {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            width: 100%;
        }

        .sidebar-link {
            color: #fff !important;
            font-weight: 500;
            font-size: 0.95rem;
            padding: 0.65rem 1.2rem;
            border-radius: 0.7rem;
            margin-bottom: 0.1rem;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            text-decoration: none;
            width: 100%;
            min-width: 0;
            max-width: 300px;
            background: none;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            transition: background 0.18s, color 0.18s;
        }

        .sidebar-link.active,
        .sidebar-link:hover {
            background: #23233a !important;
            color: #fff !important;
        }

        .sidebar-link i {
            color: #fff !important;
            flex-shrink: 0;
        }

        .sidebar-footer {
            margin-top: auto;
            border-top: 1.5px solid #23233a;
            padding-top: 0.7rem;
            display: flex !important;
            flex-direction: column;
            align-items: flex-start;
            gap: 0.7rem;
            width: 100%;
            position: relative;
            background: #000;
        }

        .sidebar-footer-btn {
            width: 100%;
            background: none;
            border: none;
            color: #fff;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            padding: 0.3rem 0.5rem;
            border-radius: 0.7rem;
            cursor: pointer;
            font-family: 'Poppins', Arial, sans-serif;
            font-size: 0.97rem;
            font-weight: 400;
            transition: background 0.18s;
            position: relative;
        }

        .sidebar-footer-btn:hover,
        .sidebar-footer-btn:focus {
            background: #181818;
        }

        .user-avatar {
            width: 2rem;
            height: 2rem;
            border-radius: 50%;
            background: #444;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            margin-right: 0.7rem;
            color: #fff;
            font-weight: 600;
            font-size: 1.1rem;
            text-transform: uppercase;
        }

        .user-info {
            display: flex;
            flex-direction: column;
            justify-content: center;
            overflow: hidden;
        }

        .user-name {
            font-size: 0.9rem;
            font-weight: 500;
            color: #fff;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .user-email {
            font-size: 0.85rem;
            font-weight: 400;
            color: #ccc;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(4px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeOut {
            from {
                opacity: 1;
                transform: translateY(0);
            }

            to {
                opacity: 0;
                transform: translateY(4px);
            }
        }

        .sidebar-footer-dropdown {
            display: none;
            margin: 0.7rem 1.2rem 0 1.2rem;
            width: auto;
            background: #181818;
            border-radius: 1rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.32);
            padding: 1.1rem 1.1rem 0.7rem 1.1rem !important;
            z-index: 4000;
            font-family: 'Poppins', Arial, sans-serif;
            animation: fadeIn 0.18s;
            animation-fill-mode: both;
        }

        .sidebar-footer-dropdown.show {
            display: block;
            animation: fadeIn 0.18s;
            animation-fill-mode: both;
        }

        .sidebar-footer-dropdown .user-avatar {
            width: 32px;
            height: 32px;
            font-size: 1.05rem;
            margin-bottom: 0.1rem;
            background: #444;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-weight: 600;
            text-transform: uppercase;
        }

        .sidebar-footer-dropdown .user-name {
            font-size: 0.93rem;
            font-weight: 500;
            color: #fff !important;
            font-family: 'Poppins', Arial, sans-serif;
        }

        .sidebar-footer-dropdown .user-email {
            font-size: 0.8rem;
            color: #bdbdbd !important;
            margin-bottom: 0.5rem;
            font-family: 'Poppins', Arial, sans-serif;
            word-break: break-all;
            white-space: normal;
            max-width: 100%;
            overflow: visible;
        }

        .sidebar-footer-dropdown .dropdown-divider {
            border-top: 1px solid #23233a !important;
            margin: 0.4rem 0;
            display: block !important;
        }

        .sidebar-footer-dropdown .dropdown-item {
            color: #fff !important;
            background: none !important;
            padding: 0.45rem 0.5rem;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            font-size: 0.95rem;
            font-family: 'Poppins', Arial, sans-serif;
            font-weight: 400;
            transition: background 0.18s, color 0.18s;
            opacity: 1 !important;
            cursor: pointer;
        }

        .sidebar-footer-dropdown .dropdown-item i {
            color: #fff !important;
        }

        .sidebar-footer-dropdown .dropdown-item:hover,
        .sidebar-footer-dropdown .dropdown-item:focus,
        .sidebar-footer-dropdown .dropdown-item:active {
            background: rgb(7, 10, 243) !important;
            color: #fff !important;
        }

        .sidebar-footer-dropdown .dropdown-item:hover i,
        .sidebar-footer-dropdown .dropdown-item:focus i,
        .sidebar-footer-dropdown .dropdown-item:active i {
            color: #fff !important;
        }

        .sidebar-footer-btn .bi,
        .sidebar-footer-btn .user-name {
            color: #fff !important;
        }
    </style>
</head>

<body>
    <!-- Header móvil: negro, logo a la izquierda, menú hamburguesa a la derecha -->
    <header id="mobile-header" class="mobile-header d-block d-md-none">
        <div class="d-flex align-items-center justify-content-between w-100">
            <img src="/img/logo_header.svg" alt="Logo del proyecto">
            <button id="mobile-hamburger" aria-label="Abrir menú lateral">
                <i id="hamburger-icon" class="bi bi-list"></i>
            </button>
        </div>
    </header>
    <!-- Fondo semitransparente para cubrir el contenido cuando el sidebar está abierto en móvil -->
    <div id="sidebar-backdrop"
        style="display:none;position:fixed;top:0;left:0;width:100vw;height:100vh;background:rgba(0,0,0,0.32);z-index:1999;transition:opacity 0.3s;">
    </div>
    <!-- Barra lateral con navegación -->
    <div id="sidebar" class="sidebar">
        <div class="text-center mb-4 sidebar-logo-container">
            <img src="/img/logo_sidebar.svg" alt="Logo del proyecto" class="logo" id="sidebar-toggle">
        </div>
        <nav class="sidebar-menu d-flex flex-column w-100">
            <a href="#" class="sidebar-link active"><i class="bi bi-people me-2"></i> <span
                    class="sidebar-link-text">Unirse a partida</span></a>
        </nav>
        <div class="sidebar-user-link" style="width:100%;margin-top:0.7rem;">
            <button class="sidebar-footer-btn w-100" id="sidebar-user-btn" aria-expanded="false" type="button"
                style="background:none;border:none;display:flex;align-items:center;gap:0.7rem;padding:0.65rem 1.2rem;width:100%;">
                <div class="user-avatar">
                    I
                </div>
                <div class="user-info">
                    <span class="user-name">Invitado</span>
                </div>
                <i class="bi bi-chevron-down arrow"></i>
            </button>
            <div class="sidebar-footer-dropdown" id="sidebar-user-dropdown">
                <div class="d-flex align-items-center mb-2">
                    <div class="user-avatar me-2">
                        I
                    </div>
                    <div style="min-width:0;">
                        <div class="user-name">Invitado</div>
                        <div class="user-email">invitado@ejemplo.com</div>
                    </div>
                </div>
                <div class="dropdown-divider" id="dropdown-divider"></div>
                <a href="/logout" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Cerrar sesión</a>
            </div>
        </div>
    </div>
    <div id="content" class="content">
        <!-- Sección Unirse a partida -->
        <div id="unirse-section" class="content-section active">
            <div class="w-full h-full flex flex-col items-center justify-center px-4" x-data="{ 
                    codigo: '',
                    copied: false,
                    esHost: false,
                    loading: false,
                    errorMessage: '',
                    showSuccessMessage: false,
                    init() {
                        this.resetSection();
                    },
                    resetSection(forced = false) {
                        // Si es un reset forzado (por ejemplo, después de terminar una partida)
                        if (forced) {
                            this.codigo = '';
                            this.copied = false;
                            this.esHost = false;
                            this.loading = false;
                            this.errorMessage = '';
                            this.showSuccessMessage = false;
                            this.limpiarLocalStorage();
                            return;
                        }
                        
                        // Restablecer completamente la sección
                        this.codigo = '';
                        this.copied = false;
                        this.esHost = false;
                        this.loading = false;
                        this.errorMessage = '';
                        this.showSuccessMessage = false;
                        
                        // Para invitados, no verificar localStorage ya que no pueden crear salas
                        this.limpiarLocalStorage();
                    },
                    onGameFinished() {
                        // Función específica para cuando termina una partida
                        console.log('Evento game-finished recibido - limpiando sección unirse');
                        this.resetSection(true); // Reset forzado
                    },
                    limpiarLocalStorage() {
                        localStorage.removeItem('gameCode');
                        localStorage.removeItem('gameConfig');
                        localStorage.removeItem('isHost');
                    },
                    copiarCodigo() {
                        const codigoACopiar = this.codigo || '657-934';
                        navigator.clipboard.writeText(codigoACopiar).then(() => {
                            this.copied = true;
                            setTimeout(() => { this.copied = false; }, 2000);
                        }).catch(() => {
                            // Fallback para navegadores sin clipboard API
                            this.copied = true;
                            setTimeout(() => { this.copied = false; }, 2000);
                        });
                    },
                    unirseAPartida() {
                        if (this.codigo.length < 6) {
                            this.errorMessage = 'El código debe tener al menos 6 caracteres';
                            setTimeout(() => { this.errorMessage = ''; }, 3000);
                            return;
                        }
                        
                        this.loading = true;
                        this.errorMessage = '';
                        
                        // Para invitados, usar la ruta especial sin autenticación
                        const endpoint = '/api/game-rooms/join-room-guest';
                        const body = JSON.stringify({ code: this.codigo });
                        
                        const options = {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: body
                        };
                        
                        fetch(endpoint, options)
                        .then(response => response.json())
                        .then(data => {
                            this.loading = false;
                            
                            if (data.success) {
                                console.log('Uniéndose a partida con código:', this.codigo);
                                
                                // Guardar información de la sala
                                localStorage.setItem('gameCode', this.codigo);
                                localStorage.setItem('isHost', 'false'); // Siempre false para invitados
                                localStorage.setItem('guestId', data.room.guestId); // Guardar ID de invitado
                                
                                // Redirigir al juego
                                window.location.href = '/jugar?code=' + this.codigo;
                            } else {
                                this.errorMessage = data.error || 'Error desconocido';
                                setTimeout(() => { this.errorMessage = ''; }, 5000);
                            }
                        })
                        .catch(error => {
                            this.loading = false;
                            console.error('Error:', error);
                            this.errorMessage = 'Error de conexión. Inténtalo de nuevo.';
                            setTimeout(() => { this.errorMessage = ''; }, 5000);
                        });
                    },
                    compartirCodigo() {
                        if (navigator.share && this.codigo) {
                            navigator.share({
                                title: 'Juego de Lotería',
                                text: 'Únete a mi partida con el código: ' + this.codigo,
                                url: window.location.origin + '/jugar?code=' + this.codigo
                            });
                        } else {
                            this.copiarCodigo();
                        }
                    }
                }" @game-finished.window="onGameFinished()" @page-leave.window="resetSection()">

                <!-- Logo superior -->
                <div class="mb-8 transform hover:scale-105 transition-all duration-300">
                    <img src="/img/logo_formularios.svg" alt="Logo"
                        class="w-24 h-24 mx-auto drop-shadow-xl filter saturate-110">
                </div>

                <!-- Título -->
                <div class="mb-8 text-center">
                    <h1 class="text-2xl font-bold text-gray-800 mb-2">Unirse a Partida</h1>
                    <p class="text-gray-600 text-sm">Ingresa el código de la sala</p>
                </div>

                <!-- Campo de código -->
                <div class="mb-8 w-full max-w-sm">
                    <div class="relative">
                        <div class="bg-white rounded-3xl shadow-2xl border-2 border-gray-100 overflow-hidden transition-all duration-500 hover:shadow-3xl focus-within:shadow-3xl focus-within:ring-4 focus-within:ring-blue-100 focus-within:border-blue-300"
                            style="height: 60px;">
                            <div class="flex items-center h-full">
                                <input type="text" x-model="codigo" placeholder="657-934"
                                    class="flex-1 px-4 py-3 text-lg font-bold text-center text-gray-800 bg-transparent border-0 focus:outline-none placeholder-gray-400 h-full"
                                    maxlength="7" style="letter-spacing: 2px;">
                                <div class="w-px h-8 bg-gray-200"></div>
                                <button @click="copiarCodigo()"
                                    class="group px-3 py-3 text-gray-500 hover:text-blue-600 hover:bg-blue-50 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-inset h-full flex items-center justify-center"
                                    style="width: 50px;" :class="{ 'text-green-600 bg-green-50': copied }"
                                    title="Copiar código de ejemplo">
                                    <i class="fas text-sm transition-transform duration-300 group-hover:scale-110"
                                        :class="copied ? 'fa-check' : 'fa-copy'"></i>
                                </button>
                            </div>
                        </div>

                        <!-- Mensaje de copiado -->
                        <div x-show="copied" x-transition:enter="transition ease-out duration-300"
                            x-transition:enter-start="opacity-0 transform translate-y-2 scale-95"
                            x-transition:enter-end="opacity-100 transform translate-y-0 scale-100"
                            x-transition:leave="transition ease-in duration-200"
                            x-transition:leave-start="opacity-100 transform translate-y-0 scale-100"
                            x-transition:leave-end="opacity-0 transform translate-y-2 scale-95"
                            class="absolute -bottom-8 left-1/2 transform -translate-x-1/2 bg-green-600 text-white px-3 py-1 rounded-lg text-xs font-semibold shadow-xl">
                            <i class="fas fa-check mr-1"></i>¡Copiado!
                        </div>
                    </div>
                </div>

                <!-- Mensaje de error -->
                <div x-show="errorMessage" x-transition:enter="transition ease-out duration-300"
                    x-transition:enter-start="opacity-0 transform translate-y-2 scale-95"
                    x-transition:enter-end="opacity-100 transform translate-y-0 scale-100"
                    class="mb-4 text-center w-full max-w-sm">
                    <div class="bg-red-50 border-2 border-red-200 rounded-lg p-3">
                        <div class="flex items-center justify-center space-x-2 text-red-800">
                            <i class="fas fa-exclamation-triangle text-sm"></i>
                            <span class="font-semibold text-sm">Error</span>
                        </div>
                        <p class="text-red-700 text-xs mt-1" x-text="errorMessage"></p>
                    </div>
                </div>

                <!-- Botón principal -->
                <div class="mb-6 w-full max-w-sm">
                    <button @click="unirseAPartida()"
                        class="group relative w-full px-6 py-3 bg-blue-600 hover:bg-blue-700 disabled:bg-gray-400 text-white font-semibold text-base rounded-xl transition-all duration-300 transform hover:scale-105 hover:shadow-xl disabled:scale-100 disabled:shadow-none disabled:cursor-not-allowed focus:outline-none focus:ring-4 focus:ring-blue-200 shadow-lg"
                        :disabled="codigo.length < 6 || loading">
                        <div class="flex items-center justify-center space-x-2">
                            <!-- Spinner de carga -->
                            <div x-show="loading" class="animate-spin">
                                <i class="fas fa-spinner text-sm"></i>
                            </div>
                            <!-- Ícono normal -->
                            <i x-show="!loading"
                                class="fas fa-rocket text-sm transition-transform duration-300 group-hover:translate-x-1"></i>
                            <!-- Texto del botón -->
                            <span x-show="!loading">Unirse a Partida</span>
                            <span x-show="loading">Procesando...</span>
                        </div>

                        <!-- Efecto de brillo -->
                        <div
                            class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent opacity-0 group-hover:opacity-20 transform -skew-x-12 transition-all duration-700 group-hover:translate-x-full rounded-xl">
                        </div>
                    </button>
                </div>

                <!-- Indicador de estado -->
                <div class="text-center w-full max-w-sm mb-6" x-show="codigo.length > 0 && codigo.length < 6">
                    <div
                        class="text-amber-600 text-xs font-medium bg-amber-50/90 backdrop-blur-sm px-3 py-2 rounded-lg shadow-lg border border-amber-200">
                        <i class="fas fa-exclamation-triangle mr-1"></i>
                        El código debe tener al menos 6 caracteres
                    </div>
                </div>

                <!-- Mensaje para invitados -->
                <div class="text-center w-full max-w-sm mb-6">
                    <div
                        class="text-blue-600 text-xs font-medium bg-blue-50/90 backdrop-blur-sm px-3 py-2 rounded-lg shadow-lg border border-blue-200">
                        <i class="fas fa-info-circle mr-1"></i>
                        Como invitado solo puedes unirte a partidas. <a href="/register"
                            class="text-blue-700 font-semibold underline hover:text-blue-800">Regístrate</a> para más
                        funciones.
                    </div>
                </div>

            </div>
        </div>
    </div>
    <!-- Scripts Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sidebar hamburguesa con header móvil
        const sidebar = document.getElementById('sidebar');
        const content = document.getElementById('content');
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const mobileHamburger = document.getElementById('mobile-hamburger');
        const hamburgerIcon = document.getElementById('hamburger-icon');
        const sidebarBackdrop = document.getElementById('sidebar-backdrop');
        // Mostrar/ocultar sidebar en móvil
        function openSidebar() {
            sidebar.classList.add('expanded');
            content.classList.add('expanded');
            sidebarBackdrop.style.display = 'block';
            setTimeout(() => { sidebarBackdrop.style.opacity = '1'; }, 10);
            hamburgerIcon.classList.remove('bi-list');
            hamburgerIcon.classList.add('bi-x');
        }
        function closeSidebar() {
            sidebar.classList.remove('expanded');
            content.classList.remove('expanded');
            sidebarBackdrop.style.opacity = '0';
            setTimeout(() => { sidebarBackdrop.style.display = 'none'; }, 300);
            hamburgerIcon.classList.remove('bi-x');
            hamburgerIcon.classList.add('bi-list');
        }
        mobileHamburger.addEventListener('click', (e) => {
            e.stopPropagation();
            if (!sidebar.classList.contains('expanded')) {
                openSidebar();
            } else {
                closeSidebar();
            }
        });
        // Cerrar sidebar al tocar el fondo
        sidebarBackdrop.addEventListener('click', closeSidebar);
        // Cerrar sidebar con logo (en móvil y PC)
        sidebarToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            // En móvil siempre cerrar inmediatamente
            closeSidebar();
        });
        // Dropdown usuario sidebar
        const userBtn = document.getElementById('sidebar-user-btn');
        const userDropdown = document.getElementById('sidebar-user-dropdown');
        const dropdownDivider = document.getElementById('dropdown-divider');
        if (userBtn && userDropdown && dropdownDivider) {
            userBtn.addEventListener('click', function (e) {
                e.stopPropagation();
                const expanded = userBtn.getAttribute('aria-expanded') === 'true';
                userBtn.setAttribute('aria-expanded', !expanded);
                if (!expanded) {
                    userDropdown.style.display = 'block';
                    setTimeout(() => { userDropdown.classList.add('show'); }, 10);
                } else {
                    userDropdown.classList.remove('show');
                    setTimeout(() => { userDropdown.style.display = 'none'; }, 180);
                }
                if (userDropdown.classList.contains('show')) {
                    dropdownDivider.style.display = 'block';
                } else {
                    dropdownDivider.style.display = 'none';
                }
            });
            document.addEventListener('click', function () {
                if (userDropdown.classList.contains('show')) {
                    userDropdown.classList.remove('show');
                    userBtn.setAttribute('aria-expanded', false);
                    dropdownDivider.style.display = 'none';
                    setTimeout(() => { userDropdown.style.display = 'none'; }, 180);
                }
            });
            userDropdown.addEventListener('click', function (e) { e.stopPropagation(); });
        }
    </script>
</body>

