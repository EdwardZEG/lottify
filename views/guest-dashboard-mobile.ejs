<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Panel Invitado - MÃ³vil</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background: #fff;
            font-family: 'Poppins', Arial, sans-serif;
        }

        .mobile-header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 60px;
            background: #000;
            z-index: 3000;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 0 1rem;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.18);
        }

        .mobile-header .d-flex {
            width: 100%;
            height: 100%;
            align-items: center !important;
            justify-content: space-between !important;
        }

        .mobile-header img {
            height: 38px;
            width: auto;
            display: block;
            max-width: 120px;
        }

        #mobile-hamburger {
            background: transparent;
            border: none;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            height: 100%;
        }

        #hamburger-icon {
            color: #fff;
            font-size: 2.2rem;
            display: flex;
            align-items: center;
        }

        .sidebar {
            background: #000 !important;
            color: #fff;
            position: fixed;
            top: 60px !important;
            left: -100vw;
            width: 100vw !important;
            min-width: 0 !important;
            max-width: 100vw !important;
            height: calc(100vh - 60px) !important;
            padding: 0 !important;
            box-shadow: 4px 0 24px rgba(0, 0, 0, 0.18);
            transition: left 0.3s, width 0.3s;
            display: flex !important;
            flex-direction: column !important;
            min-height: 320px;
            z-index: 3001;
        }

        .sidebar.expanded {
            left: 0 !important;
        }

        #sidebar-backdrop {
            display: none;
            opacity: 0;
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0, 0, 0, 0.32);
            z-index: 1999;
            transition: opacity 0.3s;
        }

        .content,
        .content.expanded {
            margin-top: 64px !important;
            background: #fff;
        }

        @media (min-width: 601px) {
            .sidebar {
                left: 0 !important;
                width: 80px;
                height: 100vh !important;
                top: 0 !important;
                position: fixed;
            }

            .sidebar.expanded {
                width: 300px;
            }

            #sidebar-backdrop {
                display: none !important;
            }

            .content,
            .content.expanded {
                margin-top: 0 !important;
                margin-left: 80px;
            }
        }

        .sidebar-logo-container {
            width: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            overflow: hidden;
            min-height: 60px;
        }

        .sidebar-logo-container .logo {
            width: 180px !important;
            height: 60px !important;
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
            display: block;
            margin: 0 auto;
        }

        .sidebar-menu {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            width: 100%;
        }

        .sidebar-link {
            color: #fff !important;
            font-weight: 500;
            font-size: 0.95rem;
            padding: 0.65rem 1.2rem;
            border-radius: 0.7rem;
            margin-bottom: 0.1rem;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            text-decoration: none;
            width: 100%;
            min-width: 0;
            max-width: 300px;
            background: none;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
            transition: background 0.18s, color 0.18s;
        }

        .sidebar-link.active,
        .sidebar-link:hover {
            background: #23233a !important;
            color: #fff !important;
        }

        .sidebar-link i {
            color: #fff !important;
            flex-shrink: 0;
        }

        .sidebar-footer {
            margin-top: auto;
            border-top: 1.5px solid #23233a;
            padding-top: 0.7rem;
            display: flex !important;
            flex-direction: column;
            align-items: flex-start;
            gap: 0.7rem;
            width: 100%;
            position: relative;
            background: #000;
        }

        .sidebar-footer-btn {
            width: 100%;
            background: none;
            border: none;
            color: #fff;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            padding: 0.3rem 0.5rem;
            border-radius: 0.7rem;
            cursor: pointer;
            font-family: 'Poppins', Arial, sans-serif;
            font-size: 0.97rem;
            font-weight: 400;
            transition: background 0.18s;
            position: relative;
        }

        .sidebar-footer-btn:hover,
        .sidebar-footer-btn:focus {
            background: #181818;
        }

        .user-avatar {
            width: 2rem;
            height: 2rem;
            border-radius: 50%;
            background: #444;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            margin-right: 0.7rem;
            color: #fff;
            font-weight: 600;
            font-size: 1.1rem;
            text-transform: uppercase;
        }

        .user-info {
            display: flex;
            flex-direction: column;
            justify-content: center;
            overflow: hidden;
        }

        .user-name {
            font-size: 0.9rem;
            font-weight: 500;
            color: #fff;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .user-email {
            font-size: 0.85rem;
            font-weight: 400;
            color: #ccc;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(4px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes fadeOut {
            from {
                opacity: 1;
                transform: translateY(0);
            }

            to {
                opacity: 0;
                transform: translateY(4px);
            }
        }

        .sidebar-footer-dropdown {
            display: none;
            margin: 0.7rem 1.2rem 0 1.2rem;
            width: auto;
            background: #181818;
            border-radius: 1rem;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.32);
            padding: 1.1rem 1.1rem 0.7rem 1.1rem !important;
            z-index: 4000;
            font-family: 'Poppins', Arial, sans-serif;
            animation: fadeIn 0.18s;
            animation-fill-mode: both;
        }

        .sidebar-footer-dropdown.show {
            display: block;
            animation: fadeIn 0.18s;
            animation-fill-mode: both;
        }

        .sidebar-footer-dropdown .user-avatar {
            width: 32px;
            height: 32px;
            font-size: 1.05rem;
            margin-bottom: 0.1rem;
            background: #444;
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            font-weight: 600;
            text-transform: uppercase;
        }

        .sidebar-footer-dropdown .user-name {
            font-size: 0.93rem;
            font-weight: 500;
            color: #fff !important;
            font-family: 'Poppins', Arial, sans-serif;
        }

        .sidebar-footer-dropdown .user-email {
            font-size: 0.8rem;
            color: #bdbdbd !important;
            margin-bottom: 0.5rem;
            font-family: 'Poppins', Arial, sans-serif;
            word-break: break-all;
            white-space: normal;
            max-width: 100%;
            overflow: visible;
        }

        .sidebar-footer-dropdown .dropdown-divider {
            border-top: 1px solid #23233a !important;
            margin: 0.4rem 0;
            display: block !important;
        }

        .sidebar-footer-dropdown .dropdown-item {
            color: #fff !important;
            background: none !important;
            padding: 0.45rem 0.5rem;
            border-radius: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            font-size: 0.95rem;
            font-family: 'Poppins', Arial, sans-serif;
            font-weight: 400;
            transition: background 0.18s, color 0.18s;
            opacity: 1 !important;
            cursor: pointer;
        }

        .sidebar-footer-dropdown .dropdown-item i {
            color: #fff !important;
        }

        .sidebar-footer-dropdown .dropdown-item:hover,
        .sidebar-footer-dropdown .dropdown-item:focus,
        .sidebar-footer-dropdown .dropdown-item:active {
            background: rgb(7, 10, 243) !important;
            color: #fff !important;
        }

        .sidebar-footer-dropdown .dropdown-item:hover i,
        .sidebar-footer-dropdown .dropdown-item:focus i,
        .sidebar-footer-dropdown .dropdown-item:active i {
            color: #fff !important;
        }

        .sidebar-footer-btn .bi,
        .sidebar-footer-btn .user-name {
            color: #fff !important;
        }
    </style>
</head>

<body>
    <!-- Header mÃ³vil: negro, logo a la izquierda, menÃº hamburguesa a la derecha -->
    <header id="mobile-header" class="mobile-header d-block d-md-none">
        <div class="d-flex align-items-center justify-content-between w-100">
            <img src="/img/logo_header.svg" alt="Logo del proyecto">
            <button id="mobile-hamburger" aria-label="Abrir menÃº lateral">
                <i id="hamburger-icon" class="bi bi-list"></i>
            </button>
        </div>
    </header>
    <!-- Fondo semitransparente para cubrir el contenido cuando el sidebar estÃ¡ abierto en mÃ³vil -->
    <div id="sidebar-backdrop"
        style="display:none;position:fixed;top:0;left:0;width:100vw;height:100vh;background:rgba(0,0,0,0.32);z-index:1999;transition:opacity 0.3s;">
    </div>
    <!-- Barra lateral con navegaciÃ³n -->
    <div id="sidebar" class="sidebar">
        <div class="text-center mb-4 sidebar-logo-container">
            <img src="/img/logo_sidebar.svg" alt="Logo del proyecto" class="logo" id="sidebar-toggle">
        </div>
        <nav class="sidebar-menu d-flex flex-column w-100">
            <a href="#" class="sidebar-link active"><i class="bi bi-people me-2"></i> <span
                    class="sidebar-link-text">Unirse a partida</span></a>
        </nav>
        <div class="sidebar-user-link" style="width:100%;margin-top:0.7rem;">
            <button class="sidebar-footer-btn w-100" id="sidebar-user-btn" aria-expanded="false" type="button"
                style="background:none;border:none;display:flex;align-items:center;gap:0.7rem;padding:0.65rem 1.2rem;width:100%;">
                <div class="user-avatar">
                    I
                </div>
                <div class="user-info">
                    <span class="user-name">Invitado</span>
                </div>
                <i class="bi bi-chevron-down arrow"></i>
            </button>
            <div class="sidebar-footer-dropdown" id="sidebar-user-dropdown">
                <div class="d-flex align-items-center mb-2">
                    <div class="user-avatar me-2">
                        I
                    </div>
                    <div style="min-width:0;">
                        <div class="user-name">Invitado</div>
                        <div class="user-email">invitado@ejemplo.com</div>
                    </div>
                </div>
                <div class="dropdown-divider" id="dropdown-divider"></div>
                <a href="/logout" class="dropdown-item"><i class="bi bi-box-arrow-right me-2"></i>Cerrar sesiÃ³n</a>
            </div>
        </div>
    </div>
    <div id="content" class="content">
        <div class="container py-4">
            <div class="alert alert-info text-center" style="font-size:1.1rem;">
                EstÃ¡s usando el panel como <strong>invitado</strong>. Algunas funciones estÃ¡n deshabilitadas.<br>
                <a href="/login" class="btn btn-primary mt-3">Iniciar sesiÃ³n</a>
            </div>
        </div>
    </div>
    <!-- Scripts Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Sidebar hamburguesa con header mÃ³vil
        const sidebar = document.getElementById('sidebar');
        const content = document.getElementById('content');
        const sidebarToggle = document.getElementById('sidebar-toggle');
        const mobileHamburger = document.getElementById('mobile-hamburger');
        const hamburgerIcon = document.getElementById('hamburger-icon');
        const sidebarBackdrop = document.getElementById('sidebar-backdrop');
        // Mostrar/ocultar sidebar en mÃ³vil
        function openSidebar() {
            sidebar.classList.add('expanded');
            content.classList.add('expanded');
            sidebarBackdrop.style.display = 'block';
            setTimeout(() => { sidebarBackdrop.style.opacity = '1'; }, 10);
            hamburgerIcon.classList.remove('bi-list');
            hamburgerIcon.classList.add('bi-x');
        }
        function closeSidebar() {
            sidebar.classList.remove('expanded');
            content.classList.remove('expanded');
            sidebarBackdrop.style.opacity = '0';
            setTimeout(() => { sidebarBackdrop.style.display = 'none'; }, 300);
            hamburgerIcon.classList.remove('bi-x');
            hamburgerIcon.classList.add('bi-list');
        }
        mobileHamburger.addEventListener('click', (e) => {
            e.stopPropagation();
            if (!sidebar.classList.contains('expanded')) {
                openSidebar();
            } else {
                closeSidebar();
            }
        });
        // Cerrar sidebar al tocar el fondo
        sidebarBackdrop.addEventListener('click', closeSidebar);
        // Cerrar sidebar con logo (en mÃ³vil y PC)
        sidebarToggle.addEventListener('click', (e) => {
            e.stopPropagation();
            // En mÃ³vil siempre cerrar inmediatamente
            closeSidebar();
        });
        // Dropdown usuario sidebar
        const userBtn = document.getElementById('sidebar-user-btn');
        const userDropdown = document.getElementById('sidebar-user-dropdown');
        const dropdownDivider = document.getElementById('dropdown-divider');
        if (userBtn && userDropdown && dropdownDivider) {
            userBtn.addEventListener('click', function (e) {
                e.stopPropagation();
                const expanded = userBtn.getAttribute('aria-expanded') === 'true';
                userBtn.setAttribute('aria-expanded', !expanded);
                if (!expanded) {
                    userDropdown.style.display = 'block';
                    setTimeout(() => { userDropdown.classList.add('show'); }, 10);
                } else {
                    userDropdown.classList.remove('show');
                    setTimeout(() => { userDropdown.style.display = 'none'; }, 180);
                }
                if (userDropdown.classList.contains('show')) {
                    dropdownDivider.style.display = 'block';
                } else {
                    dropdownDivider.style.display = 'none';
                }
            });
            document.addEventListener('click', function () {
                if (userDropdown.classList.contains('show')) {
                    userDropdown.classList.remove('show');
                    userBtn.setAttribute('aria-expanded', false);
                    dropdownDivider.style.display = 'none';
                    setTimeout(() => { userDropdown.style.display = 'none'; }, 180);
                }
            });
            userDropdown.addEventListener('click', function (e) { e.stopPropagation(); });
        }
    </script>
</body>

</html>